services:
  db:
    image: mysql:8.0
    container_name: mysql_db
    command: --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_ROOT_PASSWORD: rootpass
      MYSQL_DATABASE: aq_shop
      MYSQL_USER: shopuser
      MYSQL_PASSWORD: shoppass
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
    networks:
      - aq_shop_network

  web:
    build: ./aquarusshop6-5-3    # Use the Dockerfile in the ./web folder. 
    container_name: web_server
    ports:
      - "80:80"  
   # volumes: 
   #  - "E:/GitRepos/AQ_Shop/aquarusshop6-5-3/:/app"
    # - "E:/GitRepos/AQ_Shop/docker_config.php:/app/conf/config.php"
    # - "E:/GitRepos/AQ_Shop/docker_php.ini:/app/php.ini" 
    depends_on:
      - db
    networks:
      - aq_shop_network

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    container_name: phpmyadmin
    environment:
      # Connect to the "db" service by its service name
      PMA_HOST: mysql_db
      PMA_PORT: 3306
      # Pass in the root password if needed
      MYSQL_ROOT_PASSWORD: rootpass
      UPLOAD_LIMIT: 64M  
    ports:
      - "8080:80"
    depends_on:
      - db
    networks:
      - aq_shop_network

volumes:
  mysql_data:

networks:
  aq_shop_network:
    driver: bridge
