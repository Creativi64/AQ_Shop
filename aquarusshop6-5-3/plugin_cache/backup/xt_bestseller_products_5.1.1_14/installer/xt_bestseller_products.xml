            <order>1</order>
            <active>1</active>
        </code>
        <code>
            <hook>admin_dropdown.php:dropdown</hook>
            <phpcode><![CDATA[include(_SRV_WEBROOT._SRV_WEB_PLUGINS.'xt_bestseller_products/hooks/admin_dropdown.php_dropdown.php');]]></phpcode>
