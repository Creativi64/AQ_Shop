<?xml version="1.0" encoding="UTF-8"?>
<xtcommerceplugin>

    <payment>
        <payment_code>xt_paypal_checkout_credit</payment_code>
        <payment_dir>xt_paypal_checkout</payment_dir>
        <payment_tpl>xt_paypal_checkout.tpl.html</payment_tpl>

        <payment_icon>xt_paypal_checkout.png</payment_icon>

        <de>
            <title>PayPal Kredit</title>
            <description></description>
        </de>
        <en>
            <title>PayPal Credit</title>
            <description></description>
        </en>
    </payment>

    <configuration_payment>

        <config>
            <key>CREDIT_PAYMENT_STATUS_NEW</key>
            <type>dropdown</type>
            <url>status:order_status</url>
            <value>16</value>
            <sort_order>45</sort_order>
            <de>
                <title><![CDATA[Bestellstatus - Neue Bestellung]]></title>
            </de>
            <en>
                <title><![CDATA[Orders status - New Order]]></title>
            </en>
        </config>

        <!-- oder status mapping -->
